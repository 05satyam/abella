Specification "nat". 

Define nat : nat -> prop by
  nat z ;
  nat (s N) := nat N.

Define even : nat -> prop by
  even z ;
  even (s (s N)) := even N.

Define odd : nat -> prop by
  odd (s z) ;
  odd (s (s N)) := odd N.

Theorem even_or_odd : forall N, nat N -> even N \/ odd N.
induction on 1. intros. case H1.
  search.
  case H2.
    search.
    apply IH to H3. case H4.
      search.
      search.