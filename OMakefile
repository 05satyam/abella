UPLOAD_SITE = "agacek@bhoop.cs.umn.edu:/web/research03/abella.cs.umn.edu"

VERSION = 1.0

.SUBDIRS: src examples

################################################
# Distribution
#

BuildDist() =
    rm -rf dist

    mkdir dist
    cp dist-makefile dist/makefile
    cp README dist/README
    cp COPYING dist/COPYING
    cp CHANGELOG dist/CHANGELOG

    mkdir dist/src
    cp src/*.ml* dist/src
    rm dist/src/*test*.ml
    rm dist/src/parser.mli
    rm dist/src/parser.ml
    rm dist/src/lexer.ml

    mkdir dist/examples
    cp examples/*.mod dist/examples
    cp examples/*.thm dist/examples

    mkdir dist/emacs
    cp emacs/* dist/emacs

abella-$(VERSION).tar.gz:
    BuildDist()
    make -C dist
    BuildDist()
    rm -f abella-$(VERSION).tar.gz
    mv dist abella
    tar c abella | gzip - > abella-$(VERSION).tar.gz
    rm -rf abella

abella-$(VERSION).zip: test theorems
    BuildDist()
    make -C dist
    mv dist/abella.exe .
    BuildDist()
    mv abella.exe dist/
    rm -f abella-$(VERSION).zip
    mv dist abella
    zip -r abella-$(VERSION).zip abella
    rm -rf abella

version.html:
    fprint(version.html, $(VERSION))

.PHONY: upload
upload: abella-$(VERSION).tar.gz abella-$(VERSION).zip version.html
    scp version.html $(UPLOAD_SITE)
    scp abella-$(VERSION).zip abella-$(VERSION).tar.gz \
        $(UPLOAD_SITE)/distributions


################################################
# Utilites
#

.PHONY: clean
clean:
   rm $(filter-proper-targets $(ls R, .))
